pipeline {
    agent any
    stages {
        stage('Check PATH') {
            steps {
                sh 'echo $PATH'
            }
        }
        stage('Install AWS CLI') {
            steps {
                script {
                    // Run as root directly
                    sh '''
                    apt-get update && \
                    apt-get install -y unzip curl && \
                    curl "https://d1wnz8y8yif8k1.cloudfront.net/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip" && \
                    unzip awscliv2.zip && \
                    ./aws/install && \
                    rm -rf awscliv2.zip aws/
                    '''
                }
            }
        }
        stage('Verify AWS CLI Installation') {
            steps {
                sh 'aws --version'
            }
        }
        stage('Print Environment Variables') {
            steps {
                sh 'env'
            }
        }
    }
}
