pipeline {
    agent any

    stages {
        stage('Verify Tools Installation') {
            steps {
                script {
                    def awsCli = sh(script: 'aws --version', returnStatus: true)
                    def eksctl = sh(script: 'eksctl version', returnStatus: true)
                    def kubectl = sh(script: 'kubectl version --client', returnStatus: true)

                    if (awsCli == 0) {
                        echo 'AWS CLI is installed.'
                    } else {
                        echo 'AWS CLI is not installed.'
                    }

                    if (eksctl == 0) {
                        echo 'eksctl is installed.'
                    } else {
                        echo 'eksctl is not installed.'
                    }

                    if (kubectl == 0) {
                        echo 'kubectl is installed.'
                    } else {
                        echo 'kubectl is not installed.'
                    }
                }
            }
        }
    }
    post {
        always {
            echo 'Verification completed.'
        }
    }
}
