pipeline {
    agent any

    stages {
        stage('Verify AWS CLI') {
            steps {
                script {
                    // Set the shell explicitly to bash
                    def output = sh(script: 'bash -c "aws sts get-caller-identity"', returnStdout: true).trim()
                    echo "AWS CLI Output: ${output}"
                }
            }
        }
    }
}
